<Content@BoxLayout>:
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "680dp"

    MDBoxLayout:
        adaptive_height:True

        # MDIconButton:
        #     icon: "arrow-left"
        #     on_release:root.call_dialog_close()

        MDIconButton:
            icon: "camera"
    MDTextField:
        id:texttitle
        font_name:app.font_name         
        text: "輸入標題"
        halign:"center"
        valign:"center"
        active_line:False
        line_anim:False
        line_color_normal:1,0,0,0
        # on_text: root.text_store(self.text)

    FitImage:
        id: VideoOrPhotoURL
        source: "./image/food_and_drink.png"
        # allow_stretch:True
        radius:[25]

        # MDToolbar:
        # md_bg_color:234/255,81/255,81/255,1
        # right_action_items: [["camera", lambda x: root.camera_on()]]
        # left_action_items: [["arrow-left", lambda x: root.callback()]] 

    MDBoxLayout:
        adaptive_height:True

        MDLabel:
            # md_bg_color:234/255,81/255,81/255,1
            font_name:app.font_name  
            text:"內容描述"
            halign:"center"
            valign:"center"
            size_hint_y:None
            height:dp(40)

        MDRoundFlatIconButton:
            text: "image"
            icon: "folder"
            # pos_hint: {'center_x': .5, 'center_y': .6}
            on_release: app.file_manager_open()

    MDTextField:
        id:textinfo
        font_name:app.font_name         
        text: "輸入內容"
        halign:"center"
        valign:"center"
        active_line:False
        line_anim:False
        line_color_normal:1,0,0,0
        size_hint_y:None
        height:dp(150)