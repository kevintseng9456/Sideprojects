<Upload_form_page>:
    name:'Upload_form_page'

    MDBoxLayout:
        md_bg_color:155/255,155/255,155/255,1
        orientation: "vertical"
        # cols:4
        # adaptive_height:True
        # padding:[100,0,0,0]
        # pos_hint: {"center_x": .5, "center_y": .5}

        MDToolbar:
            # md_bg_color:234/255,81/255,81/255,1
            # right_action_items: [["camera", lambda x: root.camera_on()]]
            left_action_items: [["arrow-left", lambda x: root.callback()]] 


        MDBoxLayout:
            md_bg_color:155/255,155/255,155/255,1
            orientation: "vertical"
            padding:[20,100,20,40]
            MDCard:
                # id:mission_card
                orientation: "vertical"
                size_hint_y: None
                size_hint_x: None
                height: 360
                width: 360
                focus_behavior: True
                ripple_behavior: True
                radius:25
                font_name:app.font_name 
                MDBoxLayout:
                    # id: text_box
                    orientation: "vertical"
                    md_bg_color:147/255,143/255,153/255,1
                    radius:[12]
                    padding:[1] 
                    FitImage:
                        id: image_box_001
                        source: './image/campus.jpg'
                        allow_stretch:True
                        radius:12,12,0,0      
                    MDBoxLayout:
                        orientation: "vertical"
                        adaptive_height:True 
                        md_bg_color:0,0,0,1
                        radius:[0,0,12,12]
                                                            
                        MDTextField:
                            id:title
                            hint_text: "Title"
                            font_name:app.font_name
                            # id: mission_name_001
                            # text:root.text_source
                            # font_name:app.font_name 
                            # text_color:1, 1, 1, 1
                            # font_size:'18sp'
                            # size_hint_y:None
                            # height: 40
                            # height: self.texture_size[1]
                            
                        MDTextField:
                            id:content
                            hint_text: "Content"
                            font_name:app.font_name 
                            font_size:'12sp'
                            text_color:1, 1, 1, 1
                            size_hint_y:None
                            height: 36
                            # radius:[0,0,12,12]

                        MDTextField:
                            id:special_content
                            hint_text: "Remark"
                            font_name:app.font_name 
                            font_size:'12sp'
                            text_color:1, 1, 1, 1
                            size_hint_y:None
                            height: 36
                            radius:[0,0,12,12]                        
                    # MDBoxLayout:
                    #     orientation: "vertical"
                    #     adaptive_height:True 
                    #     md_bg_color:0,0,0,1
                    #     radius:[0,0,12,12]
            MDBoxLayout:
                MDFlatButton:
                    text: "CANCEL"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 1, 1
                    on_press:
                        root.ids.title.text = ''
                        root.ids.content.text = ''
                        root.ids.special_content.text = ''
                        app.root.current = 'home'
                        print("------home------")    
                MDFlatButton:
                    text: "OK"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 1, 1
                    on_press:
                        root.UploadReguestsChallenge(app.UserID,root.ids.title.text,'','',root.ids.content.text,root.ids.special_content.text)
                        root.ids.title.text = ''
                        root.ids.content.text = ''
                        root.ids.special_content.text = ''
                        app.root.current = 'home'
                        print("------home------")                                     